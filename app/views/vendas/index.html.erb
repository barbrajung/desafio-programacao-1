<h1>Cadastro de Vendas</h1>
<br/>
<h3>
<% if params[:totaldaimportacao] %>
    <%= "Total da última importação: R$ #{params[:totaldaimportacao]} " %>
<% end %>
</h3>
<% if (params[:numero].to_f > 0) %>
  <%= "Existe(m) linhas sem valor/quantidade e as mesmas não foram importadas. Verifique o arquivo." %>
<% end %>
<br/>
<br/>
<h3>
<%= link_to 'Importar novo Arquivo', '/arquivo' %>
</h3>
<br/>

<table>
  <tr>
    <th>Nome do Comprador</th>
    <th>Descrição do Item</th>
    <th>Preço</th>
    <th>Quantidade</th>
    <th>Endereço do Comerciante</th>
    <th>Nome do Comerciante</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vendas.each do |venda| %>
  <tr>
    <td><%= venda.purchaser_name %></td>
    <td><%= venda.item_description %></td>
    <td><%= venda.item_price %></td>
    <td><%= venda.purchase_count %></td>
    <td><%= venda.merchant_adress %></td>
    <td><%= venda.merchant_name %></td>
    <td><%= link_to 'Detalhar', venda %></td>
    <td><%= link_to 'Editar', edit_venda_path(venda) %></td>
    <td><%= link_to 'Apagar', venda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo', new_venda_path %>